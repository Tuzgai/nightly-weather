[location]
# Your location coordinates (example: Seattle)
latitude = 47.6062
longitude = -122.3321

[email]
# SMTP server settings
smtp_host = "smtp.example.com"
smtp_port = 587
smtp_username = "your-email@example.com"
smtp_password = "your-password"

# Email addresses
from_email = "your-email@example.com"
# Use to_emails for multiple recipients (recommended)
to_emails = ["recipient1@example.com", "recipient2@example.com"]
# Or use to_email for a single recipient (backward compatible)
# to_email = "recipient@example.com"

[sprinkler]
# Precipitation threshold in inches
# Don't run sprinkler if precipitation exceeds this amount
threshold = 0.1

# Time period to check in hours
hours_to_check = 12

# Barometric pressure change threshold in hectopascals (hPa)
# Changes >= this value are considered "significant" (optional, defaults to 6)
# Typical significant changes: 5-8 hPa over 24 hours
pressure_change_threshold = 6
